<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar_fruits"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="115dp"
        android:layout_height="84dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="60" />

    <TextView
        android:id="@+id/text_view_progress_fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bar_fruits"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar_fruits"
        app:layout_constraintStart_toStartOf="@+id/progress_bar_fruits"
        app:layout_constraintTop_toTopOf="@+id/progress_bar_fruits"
        tools:text="60%" />

    <Button
        android:id="@+id/button_decr_fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 10%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar_fruits"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/progress_bar_fruits"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar_fruits"
        app:layout_constraintVertical_bias="0.084" />

    <Button
        android:id="@+id/button_incr_fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ 10%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/progress_bar_fruits"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/progress_bar_fruits"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar_fruits"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>