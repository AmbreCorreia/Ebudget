<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-2dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonCourses"
            android:layout_width="98dp"
            android:layout_height="77dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-2dp"
            app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

        <ImageButton
            android:id="@+id/imageButtonProfil"
            android:layout_width="91dp"
            android:layout_height="77dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="-1dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <ImageButton
            android:id="@+id/imageButtonStats"
            android:layout_width="88dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="155dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/ic_baseline_equalizer_24" />

        <ImageButton
            android:id="@+id/imageButtonNotifs"
            android:layout_width="89dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/ic_baseline_notification_important_24" />

        <ImageButton
            android:id="@+id/imageButtonCategory"
            android:layout_width="97dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-13dp"
            android:layout_marginBottom="-3dp"
            app:srcCompat="@drawable/ic_baseline_apps_24" />
    </RelativeLayout>

</RelativeLayout>