<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2E2"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".camera.PictureFragment">


    <TextView
        android:id="@+id/labeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Prenez une photo !"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="404dp"
        android:layout_height="338dp"
        android:layout_marginTop="48dp"
        android:layout_weight="50"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labeInfo"
        app:layout_constraintVertical_bias="0.033"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonImage2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="494dp"
        android:layout_height="102dp"
        android:layout_marginTop="44dp"
        android:layout_weight="1"
        android:text="Prendre une photo"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.084"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>